{% extends "/home/index.html.twig" %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="authentication-bg min-vh-100">
        <div class="bg-overlay bg-light"></div>
        <div class="container">
            <div class="d-flex flex-column min-vh-100 px-3 pt-4">
                <div class="row justify-content-center my-auto">
                    <div class="col-md-8 col-lg-6 col-xl-5">

                        <div class="mb-4 pb-2 text-center">
                        </div>

                        <div class="card">
                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5>Register Account</h5>
                                    <p class="text-muted">Get your account now.</p>
                                </div>
                                <div class="p-2 mt-4">
                                    {{ form_start(registrationForm, { 'attr': { 'class': 'needs-validation' } }) }}

                                    <!-- Email Field -->
                                    <div class="mb-3">
                                        <label for="{{ registrationForm.email.vars.id }}" class="form-label">Email</label>
                                        <div class="position-relative input-custom-icon">
                                            {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter email' } }) }}
                                            <span class="bx bx-mail-send"></span>
                                        </div>
                                        {{ form_errors(registrationForm.email) }}
                                    </div>
                                    <!-- Password Field -->
                                    <div class="mb-3">
                                        <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">Password</label>
                                        <div class="position-relative auth-pass-inputgroup input-custom-icon">
                                            <span class="bx bx-lock-alt"></span>
                                            {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter password' } }) }}
                                        </div>
                                        {{ form_errors(registrationForm.plainPassword) }}
                                    </div>


                                    <div class="mb-3">
                                        <label for="{{ registrationForm.roles.vars.id }}" class="form-label">Roles</label>
                                    <div class="form-check py-1">
                                        {{ form_widget(registrationForm.roles, { 'attr': { 'class': 'form-control' } }) }}
                                        <label class="form-check-label" for="{{ registrationForm.roles.vars.id }}"></label>
                                        {{ form_errors(registrationForm.roles) }}
                                    </div>
                                    </div>
                                    <!-- Agree Terms -->
                                    <div class="form-check py-1">
                                        {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'form-check-input' } }) }}
                                        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                                            I accept <a href="#" class="text-body">Terms and Conditions</a>
                                        </label>
                                        {{ form_errors(registrationForm.agreeTerms) }}
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="mt-3">
                                        <button  class="btn btn-primary w-100 waves-effect waves-light" type="submit">Register</button>
                                    </div>
                                    {{ form_end(registrationForm) }}

                                </div>
                            </div>
                        </div>
                    </div><!-- end col -->
                </div><!-- end row -->

                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center p-4">
                            <p>Â© <script>document.write(new Date().getFullYear())</script> Crafted with <i class="mdi mdi-heart text-danger"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- end container -->
    </div>
{% endblock %}
