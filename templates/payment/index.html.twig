{% extends "/home/index.html.twig" %}

{% block body %}

<div class="navbar-header">
    {% block header %}
        {{ parent() }}
    {% endblock %}
</div>
<div class="vertical-menu">
    {% block sidebar %}
        {{ parent() }}
    {% endblock %}
</div>
<div class="main-content">
    <h1>Payment Liste</h1>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table mb-0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Methode</th>
                <th>DatePayment</th>
                <th>Amount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.methode }}</td>
                <td>{{ payment.datePayment ? payment.datePayment|date('Y-m-d') : '' }}</td>
                <td>{{ payment.amount }}</td>
                <td>
                    <a class="btn btn-primary"  role="button" href="{{ path('app_payment_edit', {'id': payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
    </div>


    <a href="{{ path('app_payment_new') }}">Create new</a>
{% endblock %}
